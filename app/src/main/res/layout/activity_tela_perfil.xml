<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPerfil"
    android:background="@drawable/img">

    <View
        android:id="@+id/containerUser"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/conatiner_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_android_24"
        app:layout_constraintEnd_toEndOf="@id/containerUser"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@id/containerUser"
        app:layout_constraintTop_toBottomOf="@id/containerUser"
        app:layout_constraintTop_toTopOf="@id/containerUser"
        />
    <ImageView
        android:id="@+id/ic_person"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_attribution_24"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerUser"
        />
    <TextView
        android:id="@+id/textNomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome exemplo"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        android:background="@drawable/container_components"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@id/ic_person"
        app:layout_constraintTop_toBottomOf="@id/containerUser"
        />
    <ImageView
        android:id="@+id/ic_cpf"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_all_inclusive_24"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_person"
        />
    <TextView
        android:id="@+id/textEmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@.gmail.com.br"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        android:background="@drawable/container_components"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@id/ic_cpf"
        app:layout_constraintTop_toBottomOf="@id/textNomeUser"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textAllCaps="true"
        android:background="@drawable/button"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/textEmailUser"
        />
</androidx.constraintlayout.widget.ConstraintLayout>